generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())

    fullName String
    email    String
    password String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Item {
    id Int @id @default(autoincrement())

    name     String
    imageUrl String
    type     String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
